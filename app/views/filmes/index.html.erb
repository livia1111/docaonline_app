<h1>Listing filmes</h1>

<table>
  <tr>
    <th>Tipo de midia</th>
    <th>Atores principais</th>
    <th>Diretor</th>
    <th>Distribuidora</th>
    <th>Genero</th>
    <th>Tempo de duracao</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @filmes.each do |filme| %>
  <tr>
    <td><%= filme.tipo_de_midia %></td>
    <td><%= filme.atores_principais %></td>
    <td><%= filme.diretor %></td>
    <td><%= filme.distribuidora %></td>
    <td><%= filme.genero %></td>
    <td><%= filme.tempo_de_duracao %></td>
    <td><%= link_to 'Show', filme %></td>
    <td><%= link_to 'Edit', edit_filme_path(filme) %></td>
    <td><%= link_to 'Destroy', filme, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

